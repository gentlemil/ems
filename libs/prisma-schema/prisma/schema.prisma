
generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider   = "postgres"
  url        = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Sentiment {
  POSITIVE
  NEUTRAL
  NEGATIVE
}

model User {
  id            Int       @id @default(autoincrement())
  public_id     String    @unique @default(uuid())
  email         String    @unique
  password      String
  first_name    String
  last_name     String
  is_confirmed  Boolean   @default(false)
  role          Role      @default(USER)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
}

model Review {
  id            Int         @id @default(autoincrement())
  public_id     String      @unique @default(uuid())
  content       String
  author_name   String
  created_at    DateTime    @default(now())
  is_confirmed  Boolean     @default(false)
  sentiment     Sentiment?
}

model Article {
  id            Int       @id @default(autoincrement())
  public_id     String    @unique @default(uuid())
  title         String
  content       String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  is_published  Boolean   @default(false)
}
